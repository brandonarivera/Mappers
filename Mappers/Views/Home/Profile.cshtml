    <div class="container">
        <div class="row">
            <div class="col-xs-6">

                <h2>My Photos</h2>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
             Indicators
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

             Wrapper for slides
            <div class="carousel-inner">

                <div class="item active">
                    <img src="~/images/siblings cat .jpg" width="600" height="660" />
                    <div class="carousel-caption">
                        <h3><font color="black">San Antonio, TX</font></h3>
                        <h4><font color="black">First Day of School for the Kiddos | August 2018</font></h4>
                    </div>
                </div>

                <div class="item">
                    <img src="~/images/family photo.jpg" width="600" height="660" />
                    <div class="carousel-caption">
                        <h3><font color="black">San Antonio, TX</font></h3>
                        <h4><br /></h4>
                    </div>
                </div>

                <div class="item">
                    <img src="~/images/family photo1.png" width="600" height="660" />
                    <div class="carousel-caption">
                        <h3><font color="black">Carolina, NC</font></h3>
                        <h4><font color="black">Beach Day | June 2016</font></h4>
                    </div>
                </div>

            </div>

             @*Left and right controls*@
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
            </div>
            </div>
        </div>
    </div>
