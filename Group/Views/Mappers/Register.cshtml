@model Group.Models.Mapper

@{
    ViewData["Title"] = "Register";
}

<h1>Profile</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="firstName" class="control-label">First Name</label>
                <input asp-for="firstName" class="form-control" />
                <span asp-validation-for="firstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lastName" class="control-label">Last Name</label>
                <input asp-for="lastName" class="form-control" />
                <span asp-validation-for="lastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label">Password</label>
                <input asp-for="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="phoneNumber" class="control-label">Phone Number</label>
                <input asp-for="phoneNumber" class="form-control" />
                <span asp-validation-for="phoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="email" class="control-label">Email</label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="currentBase" class="control-label">Currenty Duty Station</label>
                <input asp-for="currentBase" class="form-control" />
                <span asp-validation-for="currentBase" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label"> 
                 Notifications   <input class="form-check-input" asp-for="notifications" /> @*@Html.DisplayNameFor(model => model.notifications)*@
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                 Check for Public Profile
                <input class="form-check-input" asp-for="publicOrPrivate" /> @*@Html.DisplayNameFor(model => model.publicOrPrivate)*@
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
