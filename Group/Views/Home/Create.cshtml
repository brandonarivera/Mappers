@model IEnumerable<Group.Models.Base>
    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <p>@ViewBag.FirstName</p>
        <partial name="_LoginPartial" />
    </div>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink("Show Details", "Details", "Bases", new { ID = item.BaseID })


                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BaseName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BaseID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BaseID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BaseID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
